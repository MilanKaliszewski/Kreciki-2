        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="1" Grid.Row="3" Clicked="minus" BackgroundColor="Transparent"/>
        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="2" Grid.Row="3" Clicked="minus" BackgroundColor="Transparent"/>
        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="3" Grid.Row="3" Clicked="minus" BackgroundColor="Transparent"/>
        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="4" Grid.Row="3" Clicked="minus" BackgroundColor="Transparent"/>
