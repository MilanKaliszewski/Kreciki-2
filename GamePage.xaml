        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="5" Grid.Row="0" Clicked="minus" BackgroundColor="Transparent"/>

        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="0" Grid.Row="1" Clicked="minus" BackgroundColor="Transparent"/>
        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="1" Grid.Row="1" Clicked="minus" BackgroundColor="Transparent"/>
        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="2" Grid.Row="1" Clicked="minus" BackgroundColor="Transparent"/>
