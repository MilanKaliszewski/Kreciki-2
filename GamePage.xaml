        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="2" Grid.Row="2" Clicked="minus" BackgroundColor="Transparent"/>
        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="3" Grid.Row="2" Clicked="minus" BackgroundColor="Transparent"/>
