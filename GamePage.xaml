        <ImageButton Source="./Resources/Images/dziura.png" Grid.Column="5" Grid.Row="4" Clicked="minus" BackgroundColor="Transparent"/>
        <HorizontalStackLayout Grid.Column="0" Grid.Row="0" Margin="5">
            <Label x:Name="licznik" Text="Aktualny wynik: 0" FontSize="18"/>
            <Label x:Name="licznikCzas" Text="Aktualny czas: 0:0:0" FontSize="18" Margin="20, 0"/>
        </HorizontalStackLayout>




