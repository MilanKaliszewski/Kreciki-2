<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kreciki.GameOver"
             BackgroundImageSource="gameover.png"
             >
    <VerticalStackLayout>
        <Label x:Name="wynik" Text="Twój wynik wyniósł: 0" Margin="0, 130, 0,0" FontSize="30" HorizontalTextAlignment="Center" TextColor="#5d2323" FontAttributes="Bold"/>
        <Label x:Name="czas" Text="Czas gry: 0" Margin="0, 0,0,0" FontSize="30" HorizontalTextAlignment="Center" TextColor="#5d2323" FontAttributes="Bold"/>
        <Label x:Name="powod" Text="Przegrałeś ponieważ: " Margin="0, 0,0,90" FontSize="30" HorizontalTextAlignment="Center" TextColor="#5d2323" FontAttributes="Bold"/>
        <Label Text="Co teraz?" Margin="0, 210 ,0,0" FontSize="20" HorizontalTextAlignment="Center" TextColor="#5d2323"/>
        <Button x:Name="nowagra" Text="Nowa gra" Clicked="nowagra_Clicked" WidthRequest="150" Margin="0,10,0,10" BackgroundColor="#5d2323" TextColor="White"/>
        <Button x:Name="scoreboard" Text="Tabela wyników" Clicked="scoreboard_Clicked" WidthRequest="150" BackgroundColor="#5d2323" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>